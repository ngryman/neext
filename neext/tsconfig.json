{
  "extends": "../tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": ["dist/"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "overrides": [
    {
      "files": ["src/sdk/**/*"],
      "compilerOptions": {
        "types": ["chrome", "vite/client"]
      }
    },
    {
      "files": ["src/vite/**/!(*dev|*runtime).ts"],
      "compilerOptions": {
        "types": ["node"]
      }
    },
    {
      "files": ["src/vite/assets/*/dev.ts", "src/vite/assets/*/runtime.ts"],
      "compilerOptions": {
        "types": ["runtime.d.ts"]
      }
    }
  ]
}
